@using Core.Entities.Medicio
@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper" style="width:1300px">
	<div class="row">

		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Employee Table</h4>

					<div class="table-responsive">
						<a asp-action="Create">Create new</a>
						<table class="table table-striped">
							<thead>
								<tr>
									<th>
										Image
									</th>
									<th>
										Name
									</th>
									<th>
										Position
									</th>
									<th>
										Actions
									</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{

									<tr>

										<td class="py-1">
											<img src="~/assets/img/doctors/@item.Image" alt="image" />
										</td>

										<td>
											@item.Name
										</td>

										<td>
											@item.Position
										</td>

										<td>
											<a class="btn btn-info" style="color:white" asp-action="Detail" asp-route-id="@item.Id">Details</a>
											<a class="btn btn-info" style="color:white" asp-action="Update" asp-route-id="@item.Id">Update</a>
											<a class="btn btn-info" style="color:white" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
										</td>

									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>

